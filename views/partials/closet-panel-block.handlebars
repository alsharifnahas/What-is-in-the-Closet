<div class="column is-4" style="font-size: 14px;">
    {{!-- will be a shirt partial --}}

    <div class="column is-justify-content-center is-flex">{{name}}</div>
    <div class="is-justify-content-center is-flex w-100">
        <img src="https://bulma.io/images/placeholders/256x256.png">
    </div>
    <div class="column is-justify-content-center is-flex">
        <span class="add mr-3 ml-3" data-id="{{id}}" id="click" data-name="{{name}}">
            add
        </span>
        <span class="trash mr-3 ml-3" data-id="{{id}}" id="click" data-type="{{type}}">
            delete
        </span>
        <span class="edit mr-3 ml-3" id="click" data-id="{{id}}">
            edit
        </span>
    </div>
</div>